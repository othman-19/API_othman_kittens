<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@kitten) do |f| %>
      <% render 'shared/error_messages', object: f.object %> <br>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br>

      <%= f.label :age %>
      <%= f.number_field :age, class: 'form-control' %><br>

      <%= f.label :cuteness %>
      <%= f.text_field :cuteness, class: 'form-control' %><br>

      <%= f.label :softness %>
      <%= f.text_field :softness, class: 'form-control' %><br>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>